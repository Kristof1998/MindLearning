<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_button_next_enabled"
    android:backgroundTint="@color/darkTextColor"
    android:padding="20dp">


    <ImageView
        android:id="@+id/ivCardIntelligenceIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/intelligence_type_icon" />

    <TextView
        android:id="@+id/tvCardIntelligenceTypeName"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:maxLines="1"
        android:textAlignment="center"
        android:textColor="@color/whiteColor"
        android:textSize="20sp"

        android:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivCardIntelligenceIcon" />


</androidx.constraintlayout.widget.ConstraintLayout>